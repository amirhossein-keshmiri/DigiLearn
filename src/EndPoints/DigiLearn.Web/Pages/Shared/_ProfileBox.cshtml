@model UserDto
@using DigiLearn.Web.Infrastructure
@using UserModule.Core
@using UserModule.Core.Queries._DTOs
@{
}
<div class="profile-card overflow-hidden bg-blue-gradient2 mb-5 p-5">
  <div class="profile-card-bg">
    <img src="/assets/img/bg/card-bg-01.png" class="profile-card-bg-1" alt="">
  </div>
  <div class="row align-items-center row-gap-3">
    <div class="col-lg-6">
      <div class="d-flex align-items-center">
        <span class="avatar avatar-xxl avatar-rounded me-3 border border-white border-2 position-relative">
          <img src="@UserModuleDirectories.GetUserAvatar(@Model!.Avatar)" alt="">
          <span class="verify-tick"><i class="isax isax-verify5"></i></span>
        </span>
        <div>
          <h5 class="mb-1 text-white d-inline-flex align-items-center"><a href="student-details.html">@Model.Name @Model.Family</a><a href="/profile/edit" class="link-light fs-16 ms-2"><i class="isax isax-edit-2"></i></a></h5>
          <p class="text-light">@Model.PhoneNumber</p>
        </div>
      </div>
    </div>
    <div class="col-lg-6">
      <div class="d-flex align-items-center justify-content-lg-end flex-wrap gap-2">
        <a href="/profile/RegisterTeacher" class="btn btn-white rounded-pill me-3">Become an Instructor</a>
        <a href="instructor-dashboard.html" class="btn btn-secondary rounded-pill">Instructor Dashboard</a>
      </div>
    </div>
  </div>
</div>