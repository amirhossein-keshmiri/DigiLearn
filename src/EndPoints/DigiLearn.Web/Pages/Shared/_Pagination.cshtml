@model Common.Query.Filter.BaseFilter

@if (Model.PageCount > 1)
{
  <div class="row align-items-center mt-4">
    <div class="col-md-2">
      <p class="pagination-text">Page @Model.CurrentPage of @Model.PageCount</p>
    </div>
    <div class="col-md-10">
      <ul class="pagination lms-page justify-content-center justify-content-md-end mt-2 mt-md-0">

        @if (Model.CurrentPage > Model.StartPage)
        {
          <li class="page-item prev">
            <a class="page-link" href="javascript:void(0)" tabindex="-1" onclick="changePage(@Model.CurrentPage - 1)"><i class="fas fa-angle-left"></i></a>
          </li>
        }

        @if (Model.StartPage > 1)
        {
          <li class="page-item first-page active">
            <a class="page-link" href="javascript:void(0)" onclick="changePage(1)">1</a>
          </li>
        }

        @for (var item = Model.StartPage; item <= Model.EndPage; item++)
        {
          if (item == Model.CurrentPage)
          {
            <li class="page-item active">
              <a class="page-link" href="javascript:void(0)">@item</a>
            </li>
          }
          else
          {
            <li class="page-item">
              <a class="page-link" href="javascript:void(0)" onclick="changePage(@item)">@item</a>
            </li>
          }

        }

        @if (Model.EndPage < Model.PageCount)
        {
          <li class="page-item">
            <a class="page-link" href="javascript:void(0)" onclick="changePage(@Model.PageCount)">@Model.PageCount</a>
          </li>
        }

        @if (Model.CurrentPage < Model.EndPage)
        {
          <li class="page-item next">
            <a class="page-link" href="javascript:void(0)" onclick="changePage(@Model.CurrentPage + 1)"><i class="fas fa-angle-right"></i></a>
          </li>
        }

      </ul>
    </div>
  </div>
}