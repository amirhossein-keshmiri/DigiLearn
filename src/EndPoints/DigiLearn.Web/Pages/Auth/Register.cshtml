@page
@model DigiLearn.Web.Pages.Auth.RegisterModel
@{
  Layout = "Shared/_Auth";
  ViewData["title"] = "Register";
}

<div class="col-md-6 login-wrap-bg">
  <!-- Login -->
  <div class="login-wrapper">
    <div class="loginbox">
      <div class="w-100">
        <div class="d-flex align-items-center justify-content-between login-header">
          <img src="/assets/img/logo.svg" class="img-fluid" alt="Logo">
          <a asp-page="../Index" class="link-1">Back to Home</a>
        </div>
        <h1 class="fs-32 fw-bold topic">Sign up</h1>
        <form method="post" class="mb-3 pb-3">
          <div class="mb-3 position-relative">
            <label class="form-label">PhoneNumber<span class="text-danger ms-1">*</span></label>
            <div class="position-relative">
              <input type="text" class="form-control form-control-lg" asp-for="RegisterRequest.PhoneNumber">
              <span><i class="isax isax-user input-icon text-gray-7 fs-14"></i></span>
              <span class="text-danger" asp-validation-for="RegisterRequest.PhoneNumber"></span>
            </div>
          </div>
          <div class="mb-3 position-relative">
            <label class="form-label">Password <span class="text-danger"> *</span></label>
            <div class="position-relative" id="passwordInput">
              <input type="password" id="password" class="pass-inputs form-control form-control-lg" asp-for="RegisterRequest.Password">
              <span class="isax toggle-passwords isax-eye-slash text-gray-7 fs-14"></span>
              <span class="pass-checked"></span>
            </div>
            <div class="password-strength" id="passwordStrength">
              <span id="poor"></span>
              <span id="weak"></span>
              <span id="strong"></span>
              <span id="heavy"></span>
            </div>
            <div class="mt-2" id="passwordInfo"></div>
            <span class="text-danger" asp-validation-for="RegisterRequest.Password"></span>
          </div>
          <div class="mb-3 position-relative">
            <label class="form-label">Confirm Password <span class="text-danger"> *</span></label>
            <div class="position-relative">
              <input type="password" class="pass-inputa form-control form-control-lg" asp-for="RegisterRequest.ConfirmPassword">
              <span class="isax toggle-passworda isax-eye-slash text-gray-7 fs-14"></span>
              <span class="text-danger" asp-validation-for="RegisterRequest.ConfirmPassword"></span>
            </div>
          </div>
          <div class="d-flex align-items-center justify-content-between mb-4">
            <div class="remember-me d-flex align-items-center">
              <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
              <label class="form-check-label mb-0 d-inline-flex remember-me fs-14" for="flexCheckDefault">
                I agree with <a href="javascript:void(0);" class="link-2 mx-2">Terms of Service</a> and <a href="javascript:void(0);" class="link-2 mx-2">Privacy Policy</a>
              </label>
            </div>
          </div>
          <div class="d-grid">
            <button class="btn btn-secondary btn-lg" type="submit">Sign Up <i class="isax isax-arrow-right-3 ms-1"></i></button>
          </div>
        </form>

        <div class="d-flex align-items-center justify-content-center or fs-14 mb-3">
          Or
        </div>

        <div class="d-flex align-items-center justify-content-center mb-3">
          <a href="javascript:void(0);" class="btn btn-light me-2"><img src="/assets/img/icons/google.svg" alt="img" class="me-2">Google</a>
          <a href="javascript:void(0);" class="btn btn-light"><img src="/assets/img/icons/facebook.svg" alt="img" class="me-2">Facebook</a>
        </div>

        <div class="fs-14 fw-normal d-flex align-items-center justify-content-center">
          Already you have an account?<a asp-page="Login" class="link-2 ms-1"> Login</a>
        </div>

        <!-- /Login -->

      </div>
    </div>
  </div>
</div>