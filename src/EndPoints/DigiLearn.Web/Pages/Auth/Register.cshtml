@page
@model DigiLearn.Web.Pages.Auth.RegisterModel
@{
  Layout = "Shared/_Auth";
  ViewData["title"] = "Register";
}
<form method="post" class="lg:p-10 p-6 space-y-3 relative bg-white shadow-xl rounded-md">

  <h1 class="lg:text-2xl text-xl font-semibold mb-6"> @ViewData["title"] </h1>

  <div>
    <label class="mb-0"> PhoneNumber </label>
    <input type="text" placeholder="PhoneNumber" class="bg-gray-100 h-12 mt-2 px-3 rounded-md w-full" asp-for="PhoneNumber">
    <span class="text-danger" asp-validation-for="PhoneNumber"></span>
  </div>
  <div>
    <label class="mb-0"> Password </label>
    <input type="password" placeholder="******" class="bg-gray-100 h-12 mt-2 px-3 rounded-md w-full" asp-for="Password">
    <span class="text-danger" asp-validation-for="Password"></span>
  </div>
  <div>
    <label class="mb-0"> Confirm Password </label>
    <input type="password" placeholder="******" class="bg-gray-100 h-12 mt-2 px-3 rounded-md w-full" asp-for="ConfirmPassword">
    <span class="text-danger" asp-validation-for="ConfirmPassword"></span>
  </div>
  <div class="checkbox">
    <input type="checkbox" id="chekcbox1" checked="">
    <label for="chekcbox1">
      <span class="checkbox-icon"></span> I agree to the <a href="pages-terms.html" target="_blank" class="uk-text-bold uk-text-small uk-link-reset"> Terms and Conditions </a>
    </label>
  </div>

  <div>
    <button class="bg-blue-600 font-semibold p-2 mt-5 rounded-md text-center text-white w-full">
      Get Started
    </button>
  </div>

</form>